@model IEnumerable<SalesApp.Models.Entities.GASTOS_TYPE_PROVIDER>

@{
    ViewBag.Title = "Add provider type to operation";
}

<h2>Add Provider type to Operation</h2>

@Html.ActionLink("Back to List", "Index", "GASTOS_OPERATION", new { ProductCalenderId = Request["ProductCalenderId"], CategoryProductId = Model.First().CategoryProductId }, new { @class = "LinkButton" })

<p>
    @Html.ActionLink("Create New", "NewProviderType", "GASTOS_OPERATION", new {
    ProductCalenderId =Request["ProductCalenderId"]
    , CategoryProductId = Model.First().CATEGORY_PRODUCT.Id }, new { @class="LinkButton"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Populate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY_PRODUCT.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GASTOS_TYPE.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PROVIDER.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Populate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY_PRODUCT.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GASTOS_TYPE.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PROVIDER.Name)
            </td>
            <td>
                @Html.ActionLink("Add", "Add", new { id = item.Id
               , ProductCalenderId = int.Parse(Request["ProductCalenderId"])
                ,Comment = item.Comment
               , Price = item.Price
                    ,
               GastosTypeProviderId = item.Id
           })             
            </td>         
        </tr>
    }

</table>